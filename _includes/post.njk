---
layout: base.njk
---

<div class="section">
  <div class="container is-max-desktop">
    <div class="column is-8 is-offset-2">
  <h2 class="title">{{ title }}<h2>
  <h3 class="subtitle">by <a>David</a> on {{ date | readableDate }}</h3>

  <div class="tags">
  {% for topic in topics %}
    <span class="tag"><a href="/topics/{{topic}}">{{topic}}</a></span>
  {% endfor %}
  </div>

  <div class="content has-text-justified">
    {{ content | safe }}
  </div>

  <a href="/">Read more</a>
  </div>
  </div>
</div>