---
page_title: David Landry - A blog about Artificial Intelligence, Software, Knowledge Management
layout: base.njk
navbar: false
---

<link rel="stylesheet" href="/post.css"/>
<script type="application/ld+json">
  {% include 'post_metadata.njk' %}
</script>

<div class="heading-graphic-container">
    <div class="heading-graphic-background"  style="background-image: url('/images/{{ image }}')">
    </div>
    <div class="heading-graphic-content">
        <header>
        <nav class="navbar" role="navigation" aria-label="main navigation">
          <div class="container is-max-desktop">
            <div class="navbar-brand">
              <div class="navbar-item first"><a class="to-filter" href="{{ navigation.home }}">DL.</a></div>
              <div class="navbar-item smaller"><a class="to-filter" href="/posts/">Blog</a></div>
             <div class="navbar-item smaller"><a class="to-filter" href="/research/">Research</a></div>
              <div class="navbar-item smaller"><a class="to-filter" href="/about/">Contact</a></div>
            </div>
          </div>
        </nav>
        </header>

        <div class="container is-max-desktop title-card-container">
            <div class="column is-8 is-offset-2">
                <div class="title-card">
                    <div class="title-card-inner">
                        <div class="title-card-top">
                            <h1>{{post_title}}</h1>
                        </div>
                        <div class="title-card-bottom">
                            <div class="title-card-bottom-left">
                                David Landry
                            </div>
                            <div class="title-card-bottom-right">
                                {{ post_date | readableDate("yyyy.LL.dd")  }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="section post">
  <div class="container is-max-desktop">
    <div class="column is-8 is-offset-2">

      <div class="content post-content">
        {{ content | safe }}
      </div>

    <p class='read-more'>
      <a href="/" >Read more</a>
    </p>
    </div>
  </div>
</div>
