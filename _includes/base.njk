    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="David Landry">
    {% if post_summary %}
      <meta name="description" content="{{ post_summary }} Read the full post David Landry's blog.">
    {% elif page_description %}
      <meta name="description" content="{{ page_description }}">
    {% endif %}

    {% if keywords %}
      <meta name="keywords" content="
  {%- for kw in keywords %}
  {{- kw -}}{%- if not loop.last %},{% endif -%}
  {% endfor -%}
