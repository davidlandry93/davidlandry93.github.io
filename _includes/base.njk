    {% endif %}

    <link rel="stylesheet" href="/bulma.min.css">
    <link rel="stylesheet" href="/fonts.css">
    <link rel="stylesheet" href="/style.css">

    <title>
      {% if post_title %}
        {{ post_title }}
      {% else %}
        {{ page_title }}
      {% endif %}
    </title>
    <script type="application/ld+json">
      {
        "@context": "schema.org",
        "@type": "Blog",
        "@id": "{{ metadata.url }}",
        "name": "David Landry's Blog",
