---
layout: base.njk
eleventyImport:
collections: ["post"]
---


<section class="section">
  <div class="container is-max-desktop">
    <h1 class="title">All posts</h1>
    <table class="table">
      <colgroup>
        <col style="width:10%">
        <col style="width:50%">
        <col style="width:40%">
      </colgroup>  
      <thead>
        <tr>
          <th>Date</th>
          <th>Title</th>
          <th>Topics</th>
        </tr>
      </thead>
      {%- for post in collections.post | reverse -%}
      <tbody>
      <tr>
        <td>
          <p class="post-table-row-p"><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("yyyy.LL.dd") }}</time></p>
        </td>
        <td>
          <a href="{{ post.url }}" class="post-title">{{ post.data.title }}</a>
        </td>
        <td>
        <div class="tags">
          {%- for topic in post.data.topics -%}
          <span class="tag">{{ topic }}</span>
          {%- endfor -%}
        </div>
          </td>
      </tr>
      {%- endfor -%}
      </tbody>
    </table>
    <p><a href="/">Find out more</a></p>
  </div>
</section>