    <h2>Latest posts</h2>
    <div class="fixed-grid has-2-cols has-1-cols-mobile">
      <div class="grid">
      {%- for post in collections.post | reverse -%}
        <div class="cell">
          <div class="post-card">
            <div class="post-card-image">
              <figure class="image post-thumbnail" style="background-image:url('/images/{{post.data.image}}');">
              </figure>
            </div>
            <div class="contents">
                <h3 class="post-h3"><a href="{{ post.url }}">{{ post.data.post_title }}</a></h3>
                <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("yyyy.LL.dd") }}</time>
            </div>
          </div>
        </div>
      {%- endfor -%}
